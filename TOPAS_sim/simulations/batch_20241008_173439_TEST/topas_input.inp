' --------------------------------------------
'	Create a series of simulated patterns with random scale factors --> random QPA for Corundum, Fluorite, Zincite
' --------------------------------------------
	#include "simulation_params/simulation_params_##Run_Number##.txt"
	iters 0			' Set to zero for calculated pattern 
		
'	--------------------- 
'  Simulation WITH counting statistics 
'	--------------------- 
	yobs_eqn !calc_##Run_Number##.xy = X; min #two_theta_start# max #two_theta_end# del #two_theta_step#
		
'	Save each simulated powder pattern in the XY file format: "S1_##Run_Number##.xy"
	Randomize_File_Out_Normal( S1_##Run_Number##.xy )
	
'	-------------------------------------------- 
'	Instrument definition here	
'	-------------------------------------------- 
	bkg    #background#
	mixture_MAC  #mixture_MAC#
	Zero_Error(  !zerr,  #Zero_Error# )    
	Specimen_Displacement( !disp,  #Specimen_Displacement# )  
	Absorption( !abs_a, #Absorption# ) 
	LP_Factor(  !lpfact, #LP_Factor# ) 
	Rp #Rp#
	Rs #Rs#
	Slit_Width(   !sw, #Slit_Width# )  
	Divergence( #Divergence# ) 
	axial_conv  
		filament_length  #filament_length# 
		sample_length  #sample_length# 
		receiving_slit_length  #receiving_slit_length# 
		primary_soller_angle     !sol1  #primary_soller_angle# 
		secondary_soller_angle   !sol2  #secondary_soller_angle# 
		axial_n_beta  #axial_n_beta# 
		axial_del  #axial_del# 
	lam 
		ymin_on_ymax  #ymin_on_ymax#
		#wavelength_distribution#
		 
'	-------------------------------------------- 
'	All STRs here	
' 	--------------------- 
' 		Corundum STR	
	str 
		phase_name "Corundum" 
 		r_bragg  #Corundum_r_bragg#
 		MVW( 0, 0, 0) 
		CS_L(!cslcor,     #Corundum_CS_L# ) 
		CS_G(!csgcor,     #Corundum_CS_G# ) 
		Strain_L(!mslcor, #Corundum_Strain_L# ) 
		Strain_G(!msgcor, #Corundum_Strain_G# ) 
		space_group R_-3_C 
		Phase_LAC_1_on_cm( #Corundum_Phase_LAC_1_on_cm# ) 
		Phase_Density_g_on_cm3( #Corundum_Phase_Density_g_on_cm3# ) 
		site Al num_posns  12 x  #Corundum_Al_x#  y  #Corundum_Al_y# z  #Corundum_Al_z# occ Al+3  1 beq  #Corundum_Al_beq# 
		site O num_posns   18 x  #Corundum_O_x#  y  #Corundum_O_y#  z  #Corundum_O_z#  occ O-2   1 beq  #Corundum_O_beq# 
		Trigonal(!acor  #Corundum_a# ,!ccor  #Corundum_c# ) 
		scale  #Corundum_scale#
		
' --------------------- 
' 		Fluorite STR 	
	str  
		phase_name "Fluorite" 
		r_bragg  #Fluorite_r_bragg# 
		MVW( 0, 0, 0) 
		CS_L(!cslcaf,     #Fluorite_CS_L# ) 
		CS_G(!csgcaf,     #Fluorite_CS_G# ) 
		Strain_L(!mslcaf, #Fluorite_Strain_L# )
		Strain_G(!msgcaf, #Fluorite_Strain_G# )
		space_group F_M_-3_M 
		Phase_LAC_1_on_cm( #Fluorite_Phase_LAC_1_on_cm# ) 
		Phase_Density_g_on_cm3( #Fluorite_Phase_Density_g_on_cm3# ) 
		site Ca num_posns  4 x  #Fluorite_Ca_x# y  #Fluorite_Ca_y# z  #Fluorite_Ca_z# occ Ca+2  1 beq  #Fluorite_Ca_beq# 
		site F num_posns  8 x  #Fluorite_F_x# y  #Fluorite_F_y# z  #Fluorite_F_z# occ F-1  1 beq  #Fluorite_F_beq# 
		Cubic(!acaf  #Fluorite_a# ) 
		scale  #Fluorite_scale#
 
' --------------------- 
' 		Zincite STR	
	str  
		phase_name "Zincite" 
		r_bragg  #Zincite_r_bragg#
		MVW( 0, 0, 0) 
		CS_L(!cslzno,     #Zincite_CS_L# ) 
		CS_G(!csgzin,     #Zincite_CS_G# ) 
		Strain_L(!mslzin, #Zincite_Strain_L# ) 
		Strain_G(!msgzin, #Zincite_Strain_G# ) 
		space_group P_63_M_C 
		Phase_LAC_1_on_cm( #Zincite_Phase_LAC_1_on_cm# ) 
		Phase_Density_g_on_cm3( #Zincite_Phase_Density_g_on_cm3# ) 
		site Zn num_posns  2 x  #Zincite_Zn_x# y  #Zincite_Zn_y# z  #Zincite_Zn_z# occ Zn+2  1 beq  #Zincite_Zn_beq# 
		site O num_posns  2 x  #Zincite_O_x# y  #Zincite_O_y# z  #Zincite_O_z# occ O-2  1 beq  #Zincite_O_beq# 
		Hexagonal(!azin  #Zincite_a# , !czin  #Zincite_c# ) 
		scale  #Zincite_scale#

' --------------------------------------------